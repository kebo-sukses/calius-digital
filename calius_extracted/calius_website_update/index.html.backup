        <script>
        // Load latest 3 published blog posts into the home page
        (function(){
            async function loadLatestBlogs() {
                try {
                    const res = await fetch('/data/blog.json');
                    if (!res.ok) return showError();
                    const data = await res.json();
                    const posts = (data.posts || []).filter(p => p.status === 'published')
                        .sort((a,b) => new Date(b.publishDate) - new Date(a.publishDate))
                        .slice(0,3);

                    const grid = document.getElementById('latest-blogs-grid');
                    if (!grid) return;

                    if (posts.length === 0) {
                        grid.innerHTML = '<div class="no-results" style="grid-column:1/-1"><p>No recent articles.</p></div>';
                        return;
                    }

                    grid.innerHTML = posts.map(post => {
                        const title = (post.title && (post.title.en || post.title)) || post.slug || 'Untitled';
                        const excerpt = (post.excerpt && (post.excerpt.en || post.excerpt)) || (post.content ? stripTags(post.content).slice(0,140) + '...' : '');
                        const img = post.featuredImage || '/assets/images/og-image.jpg';
                        const slug = post.slug || '';
                        const url = '/blog-detail.html?slug=' + encodeURIComponent(slug);

                        return `
                            <article class="card">
                                <img src="${img}" alt="${escapeHtml(title)}" class="card-image thumb-border" loading="lazy">
                                <div class="card-body">
                                    <h3 class="card-title">${escapeHtml(title)}</h3>
                                    <p class="card-text">${escapeHtml(excerpt)}</p>
                                    <a href="${url}" class="btn btn-sm btn-primary">Read More</a>
                                </div>
                            </article>
                        `;
                    }).join('');

                } catch (err) {
                    console.error('Failed to load latest blogs', err);
                    showError();
                }
            }

            function showError(){
                const grid = document.getElementById('latest-blogs-grid');
                if (!grid) return;
                grid.innerHTML = '<div class="no-results" style="grid-column:1/-1"><p>Unable to load articles right now.</p></div>';
            }

            function stripTags(str){
                return str ? str.replace(/<[^>]*>/g,'') : '';
            }

            function escapeHtml(s){
                if (!s) return '';
                return String(s).replace(/[&<>"']/g, function(c){
                    return { '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":"&#39;" }[c];
                });
            }

            document.addEventListener('DOMContentLoaded', loadLatestBlogs);
        })();
        </script>
